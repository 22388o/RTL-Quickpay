{
  "manifest_version": 2,
  "name": "RTL Quickpay",
  "description": "RTL Quick Lightning payments.",
  "version": "0.0.3",
  "author": "Shahana",
  "icons": {
    "128": "./images/Helmet128.png",
    "48": "./images/Helmet48.png",
    "16": "./images/Helmet16.png"
  }, 
  "background": {
    "persistent": true,
    "scripts": ["./js/browser-polyfill.js", "./js/background.js"]
  },   
  "browser_action": {
    "default_icon": "./images/Helmet16.png",
    "default_title": "RTL Quickpay",
    "default_popup": "./quickpay/quickpay.html"
  },  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./js/browser-polyfill.js", "./js/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ], 
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "applications": {
    "gecko": {
      "id": "shahana@rtl.com",
      "strict_min_version": "53.0"
    }
  }
}
